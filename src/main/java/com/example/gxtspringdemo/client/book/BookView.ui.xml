<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gxtFrm="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:gxtCnt="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxtGrid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:gxtBtn="urn:import:com.sencha.gxt.widget.core.client.button">

    <gxtCnt:VerticalLayoutContainer>
        <gxtCnt:child>
            <gxtCnt:HBoxLayoutContainer HBoxLayoutAlign="STRETCH">
                <gxtCnt:child>
                    <gxtBtn:TextButton ui:field="add" text="Add"/>
                </gxtCnt:child>
                <gxtCnt:child>
                    <gxtBtn:TextButton ui:field="remove" text="Remove"/>
                </gxtCnt:child>
            </gxtCnt:HBoxLayoutContainer>
        </gxtCnt:child>
        <gxtCnt:child>
            <gxtGrid:Grid ui:field="bookList" />
        </gxtCnt:child>
    </gxtCnt:VerticalLayoutContainer>
</ui:UiBinder>