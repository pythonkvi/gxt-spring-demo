<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gxtFrm="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:gxtCnt="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxtBtn="urn:import:com.sencha.gxt.widget.core.client.button">

    <gxtCnt:VerticalLayoutContainer>
        <gxtCnt:child>
            <gxtFrm:FieldLabel text="Login">
                <gxtFrm:child>
                    <gxtFrm:TextField ui:field="login"/>
                </gxtFrm:child>
            </gxtFrm:FieldLabel>
        </gxtCnt:child>
        <gxtCnt:child>
            <gxtFrm:FieldLabel text="Password">
                <gxtFrm:child>
                    <gxtFrm:PasswordField ui:field="password"/>
                </gxtFrm:child>
            </gxtFrm:FieldLabel>
        </gxtCnt:child>
        <gxtCnt:child>
            <gxtCnt:HBoxLayoutContainer HBoxLayoutAlign="STRETCH">
                <gxtCnt:child>
                    <gxtBtn:TextButton ui:field="ok" text="OK"/>
                </gxtCnt:child>
                <gxtCnt:child>
                    <gxtBtn:TextButton ui:field="clear" text="Clear"/>
                </gxtCnt:child>
            </gxtCnt:HBoxLayoutContainer>
        </gxtCnt:child>
    </gxtCnt:VerticalLayoutContainer>
</ui:UiBinder>